{
    "name": "ISO8601 to Local datetime converter",
    "description": "Create a context menu item for display local date/time from ISO8601 string",
    "version": "1.0",
    "manifest_version": 3,
    "author": "CocoaCaa (https://twitter.com/cocoa_caa)",
    "permissions": [
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "https://*/"
    ],
    "background": {
        "service_worker": "background.ts"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content/index.ts"
            ],
            "css": [
                "content/index.css"
            ]
        }
    ]
}